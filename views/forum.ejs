<h1>Magic Forum</h1>
<span class="text-muted">Please be polite when posting and commenting others posts!</span>
<hr>

<a class="nav-link" href="/addPost">
<button  type="button" class="btn btn-primary"> New Post </button>
</a>

<hr>
<% for (p of posts) { %>
<div class="p-3 m-3 border border-primary bg-light container">
    <div class="row"> 
        <div class="col-sm-2">
            <% if (p.img == null) { %>
                <img src= "/images/noUser.jpeg" style="width:200px; height:200px; border-radius: 50%;">
            <% } else { %>
                <img src= "data:<%=p.type%>;base64,<%=p.img%>" style="width:200px; height:200px; border-radius: 50%;">
            <% } %>
        </div>

        <div class="col-sm-10">
            <strong class="fs-4"><%= p.post.title%> </strong> <br><br>
            <i class="text-primary"> Author: <%= p.forumname%></i>
            <hr>
            <i><%= p.post.createdAt%> </i><br>
            <br>
            <%- p.post.content%> <br>
            <div class="row">
                <div class="col-sm-11"></div>
                <% if (user.username == p.post.username) { %>
                <div class="col-sm-1">
                    <a href="/forum/remove/<%= p.post._id %>" style="color:red">
                        <button  type="button" class="btn btn-danger" style="font-size: 10px;">Delete</button>
                    </a>
                </div>
                <% } else { %>
                <div class="col-sm-1">
                </div>
                <% } %>
            </div>            
        </div>

    </div>
    
</div>

<% } %>